<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:contextClickable="true">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/cardview_layout_marginStart"
        android:layout_marginTop="@dimen/cardview_layout_marginTop"
        android:layout_marginEnd="@dimen/cardview_layout_marginEnd"
        android:layout_marginBottom="@dimen/cardview_layout_marginBottom"
        app:cardCornerRadius="@dimen/cardview_card_CornerRadius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dog_item_height"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/dog_image_width"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                app:srcCompat="@drawable/dog_akita" />

            <TextView
                android:id="@+id/tvBreed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:paddingStart="@dimen/bride_text_paddingStart"
                android:text="Порода собаки"
                android:textSize="@dimen/text_large" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>